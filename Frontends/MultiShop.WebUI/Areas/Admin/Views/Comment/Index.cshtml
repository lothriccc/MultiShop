@model List<ResultCommentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>

								<th>Kullanıcı</th>
								<th>Yorum</th>
                                
                                <th>Oluşturulma Tarihi</th>
                                <th>Durum</th>
                                <th>Görsel</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                              
                                <tr>
                                    <th>@item.UserCommendID</th>

                                    <td>@item.NameSurname</td>
                                    <td>@item.CommentDetail</td>
                                    <td>@item.CreatedDate</td>
                                    <td>@item.ImageUrl</td>
                                    <td>@item.Status</td>
                                    <td><a href="/Admin/Comment/DeleteComment/@item.UserCommendID" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Admin/Comment/UpdateComment/@item.UserCommendID" class="btn btn-success">Güncelle</a></td>

                                </tr>
                            }


                        </tbody>
                    </table>
                 @*   <a href="/Admin/Comment/CreateComment/" class="btn btn-primary">Yeni Yorum Girişi</a>*@
                </div>
            </div>
        </div>

    </div>
</section>
