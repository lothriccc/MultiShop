@model CreateContactDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}



<div class="container-fluid">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3"></span>Bize Yazın</h2>
    <div class="row px-xl-5">
        <div class="col-lg-7 mb-5">
            <div class="contact-form bg-light p-30">
                <div id="success"></div>
                <form method="post" >
                    <div class="control-group">
                        <input type="text" class="form-control"  placeholder="Adınız Soyadınız"
                               required="required" data-validation-required-message="Lütfen boş geçmeyin" asp-for="NameSurname" />
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group">
                        <input type="email" class="form-control"  placeholder="Mailiniz"
                               required="required" data-validation-required-message="Lütfen boş geçmeyin" asp-for="Email" />
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group">
                        <input type="text" class="form-control"  placeholder="Konu"
                               required="required" data-validation-required-message="Lütfen boş geçmeyin" asp-for="Subject" />
                        <p class="help-block text-danger"></p>
                    </div>

                    <div class="control-group">
                        <textarea class="form-control" rows="8"  placeholder="Mesajınız" asp-for="Message"
                                  required="required"
                                  data-validation-required-message="Lütfen boş geçmeyin"></textarea>
                        <p class="help-block text-danger"></p>
                    </div>
                    <div>
                        <button class="btn btn-primary py-2 px-4" type="submit" id="sendMessageButton">
                          Mesajı Gönder
                        </button>
                    </div>
                </form>
            </div>
        </div>
        @await Component.InvokeAsync("_ContactDetailComponentPartial")
    </div>
</div>
<!-- Contact End -->
