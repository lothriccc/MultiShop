
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/_UILayout.cshtml";
}




<div class="container-fluid">
    <div class="row px-xl-5">

        <div class="col-lg-3 col-md-4">

            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Fiyata göre filtrele</span></h5>
            @await Component.InvokeAsync("_ProductListPriceFilterComponentPartial")
            

            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Renge göre filtrele</span></h5>
            @await Component.InvokeAsync("_ProductListColorFilterComponentPartial")

            

            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Bedene göre filtrele</span></h5>
            @await Component.InvokeAsync("_ProductListSizeFilterComponentPartial")
            

           

        </div>

        <div class="col-lg-9 col-md-8">
            <div class="row pb-3">
                @await Component.InvokeAsync("_ProductListGetProductCountComponentPartial")
                @await Component.InvokeAsync("_ProductListComponentPartial",new{id=ViewBag.Id})
                @await Component.InvokeAsync("_ProductListPaginationComponentPartial")
               
                

                
            </div>
        </div>

    </div>
</div>
